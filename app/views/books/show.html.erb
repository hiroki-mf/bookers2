<!DOCTYPE html>
<html>
    <head></head>
      <body>
        <main>
          <p id="notice"><%= notice %></p>
          
          <div class="container">
          <div class="row">
          <div class="col-md-3">
          
        <h2>User info</h2>
          <table class="table">
              <tbody>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <tr>
                    <th>name <%= @book.user.name %></th>  
                  </tr>
                  
                  <tr>
                    <th>introduction <%= @book.user.introduction %></th>  
                  </tr>
              </tbody>
          </table> 
          
          <div class="row">
             
            <%= link_to edit_user_path(@book.user.id), class: "btn btn-outline-secondary btn-block" do %>
              
              <i class="fas fa-user-cog"></i>
              
            <% end %>
            
          </div>
          
      <h2>New book</h2>
                
            <%= form_with model: @book_new,url: '/books', method: :post do |f| %>
                
                <h4>Title</h4>
                <%= f.text_field :title %>
            
                <h4>body</h4>
                <%= f.text_area :body %>
            
                <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
            
            <% end %>
            
           
        </div>
        
        
        <div class="col-md-8 offset-md-1">
        
        <h2>Book detail</h2>
            <table class="table">
              <tbody>
                <tr>
                
                <td>
                  <%= link_to user_path(@book.user) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <% end %>
                  <div><%= link_to @book.user.name, user_path(@book.user.id) %></div>
                </td>
                
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                
                <td><%= @book.body %></td>
                
                
              <% if @book.user == current_user %>
              
            <td>
              <button type="button" class="btn btn-sm btn-success">
              <%= link_to "Edit", edit_book_path(@book.id), class: 'text-light' %>
              </button>
            </td>
              
            <td>
              <button type="button" class="btn btn-sm btn-danger">
              <%= link_to 'Destroy', destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'text-light' %>
              </button>
            </td>
            
            <% end %>
            
          </tr>
        </tbody>
      </table>
      
      </div>  
      </div>
    </div>
  </main>
  
</body>
</html>